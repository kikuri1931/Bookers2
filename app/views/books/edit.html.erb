<div class="col-md-6 col-md-offset-3">
	<h1>Editing Book</h1>
	<%= form_for(@book) do |f| %>
		<div class="field row">
			<label>Title</label>
			<%= f.text_field :title, class:"col-xs-12 book_title" %>
		</div>
		<div class="field row">
			<label>Option</label>
			<%= f.text_area :body, class:"col-xs-12 book_body" %>
		</div>
		<div class="field row">
			<%= f.submit "Update Book", class:"btn btn-primary col-xs-12" %>
		</div>
	<% end %>
	<%= link_to "show", book_path(@book), style:"font-size: 14px;" %> | <%= link_to "back", books_path, style:"font-size: 14px;" %>
</div>
