<%= render 'books/list', book: @book %>
<div class="col-xs-9">
	<h2>Users</h2>
	<table class="table table-hover">
		<thead>
			<tr>
				<th></th>
				<th>Title</th>
				<th>Opinion</th>
			</tr>
		</thead>
		<tbody>
			<% @user.each do |user| %>
				<tr>
					<td>
						<%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpg', fallback: "no_image.jpg" %>
					</td>
					<td>
						<%= user.name %>
					</td>
					<td>
						<%= link_to "Show", user_path(user) %>
					</td>
			    </tr>
			<% end %> 
		</tbody>
	</table>
</div>