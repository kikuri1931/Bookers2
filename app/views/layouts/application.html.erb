<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar-fixed-top">
      <div class="container">
        <p class="navbar-text">Bookers</p>
           <div>
            <ul class="navbar-right">
              <% if user_signed_in? %>
                <li>
                  <%= link_to user_path(current_user.id) do %>
                   <span class="glyphicon glyphicon-home" aria-hidden="true"></span>  Home
                  <% end %> 
                </li>
                <li>
                  <a class="text-muted" href="">
                    <span class="glyphicon glyphicon-user" aria-hidden="true"></span>  Users
                  </a>  
                </li>
                <li>
                  <a class="text-muted" href="">
                    <span class="glyphicon glyphicon-book" aria-hidden="true"></span>  Books
                  </a>  
                </li>
                <li> 
                  <%= link_to destroy_user_session_path, method: :delete do %>
                   <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>  logout
                  <% end %>
                </li>
              <% else %>
                <li>
                  <a class="text-muted" href="/">
                    <span class="glyphicon glyphicon-home" aria-hidden="true"></span>  Home
                  </a>  
                </li>
                <li>
                  <a class="text-muted" href="/home/about">
                    <span class="glyphicon glyphicon-link" aria-hidden="true"></span>  About
                  </a>  
                </li>
                <li>
                  <%= link_to new_user_registration_path do %>
                   <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>  sign up
                  <% end %> 
                </li>
                <li>
                  <%= link_to new_user_session_path do %>
                    <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>  login
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div> 
        </div>
    </header>
    <div class="container">
      <div class="row">
       <%= yield %>
      </div>
    </div>
    <footer>
      <div class="container">
        <div class="row">
          <div class="col-xs-3 col-xs-offset-9">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
